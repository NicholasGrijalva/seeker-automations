# CognosMap Automation Environment Variables

# Notion API
NOTION_API_KEY=secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenAI (for embeddings and/or Whisper API)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Voyage AI for better embeddings
# VOYAGE_API_KEY=voyage-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Whisper configuration
# Options: "api" (OpenAI API), "local" (local whisper model)
WHISPER_MODE=api
WHISPER_MODEL=whisper-1  # For API mode
# WHISPER_MODEL=base      # For local mode: tiny, base, small, medium, large

# Deduplication threshold (0.0 - 1.0)
# Higher = stricter matching (fewer duplicates detected)
DEDUPE_THRESHOLD=0.85

# Voice memo watch folder (for watch_folder.py)
VOICE_MEMO_FOLDER=/Users/nick/voice-memos

# Logging
LOG_LEVEL=INFO
